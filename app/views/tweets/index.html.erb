<%= render 'tweets/forms/new_form', tweet: @tweet if user_signed_in? %>

<% @tweets.each do |tweet| %>
  <%= render 'tweet', resource: tweet %>
<% end %>

<br>

<%= link_to 'Show more tweets', root_path(page: @page + 1) unless @tweets.length < 50 %>
<%= link_to 'Previous page', root_path(page: @page - 1) unless @page == 1 %>

