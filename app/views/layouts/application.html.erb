<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>


    <div class="d-flex">

      <div class="w-100 col-2 border-right">
        <div class="d-flex flex-column">
          <%= fa_icon "twitter", class: "text-primary fa-4x" %>
          <%= link_to fa_icon("home") +" Home", root_path, class: "text-dark h4 font-weight-bold" %>
          <% if user_signed_in? %>
            <%= link_to fa_icon("sign-out") + " Log out", destroy_user_session_path, class: "text-dark h4 font-weight-bold", method: "delete" %>
          <% else %>
            <%= link_to fa_icon("sign-in") + " Log in", new_user_session_path, class: "text-dark h4 font-weight-bold" unless current_page?(new_user_session_path) %>
            <%= link_to fa_icon("user-plus") + " Register", new_user_registration_path, class: "text-dark h4 font-weight-bold" unless current_page?(new_user_registration_path) %>
          <% end %>
        </div>
      </div>

      <div class="col-10 px-0">

        <div class="overflow-auto">
          <%= yield %>
        </div>
      
      </div>

    
    </div>

  </body>
</html>
