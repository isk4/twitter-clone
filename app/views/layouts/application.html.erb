<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= favicon_link_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>


    <div class="d-flex row vh-100">

      <div class="d-flex flex-column h-100 col-3">
        <% if user_signed_in? %>
          <%= link_to "Log out", destroy_user_session_path, method: "delete" %>
        <% else %>
          <%= link_to "Log in", new_user_session_path unless current_page?(new_user_session_path) %>
          <%= link_to "Sign up", new_user_registration_path unless current_page?(new_user_registration_path) %>
          <%= link_to "Back to home", root_path if current_page?(new_user_registration_path) || current_page?(new_user_session_path) %>
        <% end %>
      </div>

      <div class="col-9">

        <nav class="container navbar navbar-light bg-light border mr-0">
          <a class="navbar-brand">Home</a>
          <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
          </form>
        </nav>

        <div class="container">
          <%= yield %>
        </div>
      
      </div>

    
    </div>

  </body>
</html>
